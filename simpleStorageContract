pragma solidity ^0.8.0;

contract SimpleStorageHockeyGame {
    uint256 public homeScore;
    uint256 public awayScore;
    TotalScore public score = TotalScore({homeScore: homeScore, awayScore: awayScore});

    struct TotalScore {
        uint256 homeScore;
        uint256 awayScore;
    }

    // Constructor to initialize scores
    constructor() {
        homeScore = 0;
        awayScore = 0;
    }

    // Function to set the scores
    function setScores(uint256 _homeScore, uint256 _awayScore) public {
        homeScore = _homeScore;
        awayScore = _awayScore;
    }

    // Function to view the scores
    function viewScores() public view returns (uint256, uint256) {
        return (homeScore, awayScore);
    }
}
